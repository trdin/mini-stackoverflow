<h1>Dodaj Vprasanje</h1>
<form action="/questions" method="post">
    <div class="form-group row">
        <label for="question" class="col-sm-2 col-form-label">Question</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="question" name="question" value="" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="description" name="description" required>
        </div>
    </div>
    <div id="tags">
        <div class="form-group row">
            <label for="tags" class="col-sm-2 col-form-label">Tag 1</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" name="tags[]" required>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <button id="addTag" type="submit" class="btn btn-primary">Add tag</button>
    </div>

    <div class="form-group row">
        <input type="submit" class="btn btn-primary mb-2" value="Objavi VpraÅ¡anje">
    </div>

</form>
<script>
    var numb = 2;
    $(document).ready(function () {
        $("#addTag").click(function (e) {
            e.preventDefault();

            $("#tags").append(`
            <div class="form-group row">
                <label for="tags" class="col-sm-2 col-form-label">Tag ${numb}</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="tags[]">
                </div>
            </div>`)
            numb++;
        });
    });
</script>